<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote  name="github"
           fetch="https://github.com" />

  <remote  name="colt-temp"
           fetch="https://github.com/ColtOSTemp"
           revision="refs/heads/c11" />

  <remote  name="colt"
           fetch="https://github.com/Colt-Enigma"
           revision="refs/heads/c11" />
          
  <remote  name="colt-devices"
           fetch="https://github.com/ColtOS-Devices"
           revision="refs/heads/c11" />

    <!-- Device Repos -->
    <project path="device/colt/sepolicy" name="platform_device_colt_sepolicy" remote="colt" />

    <!-- General Repos -->
    <project path="build/make" name="build_make" remote="colt-temp" >
        <copyfile src="core/root.mk" dest="Makefile" />
        <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
        <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
        <linkfile src="core" dest="build/core" />
        <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
        <linkfile src="target" dest="build/target" />
        <linkfile src="tools" dest="build/tools" />
    </project>

    <!-- Hardware Repos -->
    <project path="hardware/interfaces" name="platform_hardware_interfaces" remote="colt-temp" />
    <project path="hardware/colt/interfaces" name="platform_hardware_colt_interfaces" remote="colt-temp" />

    <!-- Packages Repos -->
    <project path="packages/apps/ColtCenter" name="platform_packages_apps_ColtCenter" remote="colt" />
    <project path="packages/apps/Settings" name="packages_apps_Settings" remote="colt-temp" />    

    <!-- Vendor Repo -->
    <project path="vendor/colt" name="platform_vendor_colt" remote="colt" />
    <project path="vendor/ColtSpares" name="platform_vendor_ColtSpares" remote="colt" />


</manifest>
